<% title "Settings" %>

<div class="px-4 sm:px-6 lg:px-8">
  <div class="flow-root">
    <%= render 'navigation' %>

    <div class="-mx-4 -my-2 overflow-x-auto sm:-mx-6 lg:-mx-8">
      <div class="inline-block min-w-full py-2 align-middle sm:px-6 lg:px-8">
        <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
          <%= form_for @change_password_form, as: :form, url: settings_update_password_path, html: { method: :put, class: 'space-y-6' } do |f| %>
            <div>
              <div class="flex items-center justify-between">
                <label htmlFor="password" class="block text-sm font-medium leading-6 text-gray-900">
                  Current Password
                </label>

              </div>
              <div class="mt-2">
                <%= f.password_field :current_password, class: 'block w-full outline-none rounded-md border-0 py-1.5 px-2 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-purple-600 sm:text-sm sm:leading-6', id: 'password', required: true, autocomplete: 'current-password' %>
              </div>
            </div>

            <div>
              <div class="flex items-center justify-between">
                <label htmlFor="password" class="block text-sm font-medium leading-6 text-gray-900">
                  New Password
                </label>

              </div>
              <div class="mt-2">
                <%= f.password_field :password, class: 'block w-full outline-none rounded-md border-0 py-1.5 px-2 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-purple-600 sm:text-sm sm:leading-6', id: 'password', required: true, autocomplete: 'current-password' %>
              </div>
            </div>

            <div>
              <div class="flex items-center justify-between">
                <label htmlFor="password" class="block text-sm font-medium leading-6 text-gray-900">
                  New Password Confirmation
                </label>

              </div>
              <div class="mt-2">
                <%= f.password_field :password_confirmation, class: 'block w-full outline-none rounded-md border-0 py-1.5 px-2 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-purple-600 sm:text-sm sm:leading-6', id: 'password', required: true, autocomplete: 'current-password' %>
              </div>
            </div>

            <div>
              <%= f.submit 'Update', class: 'flex w-full justify-center rounded-md bg-purple-600 px-3 py-1.5 text-sm font-semibold leading-6 cursor-pointer text-white shadow-sm hover:bg-purple-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-purple-600' %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
