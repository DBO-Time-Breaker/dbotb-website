<% title "Login" %>

<div class="flex min-h-full flex-1 flex-col justify-center px-6 py-12 lg:px-8 bg-cover bg-no-repeat bg-bottom bg-opacity-40">
  <div class="sm:mx-auto sm:w-full sm:max-w-sm">
    <%= image_tag 'logo.png', alt: 'DBO', class: 'mx-auto w-auto' %>
  </div>

  <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
    <%= form_for @account, as: :account, url: account_login_submit_path, html: { method: :post, class: 'space-y-6' } do |f| %>

      <div>
        <label htmlFor="username" class="block text-sm font-medium leading-6 text-gray-900">
          Username
        </label>
        <div class="mt-2">
          <%= f.text_field :username, class: 'block w-full outline-none rounded-md border-0 py-1.5 px-2 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-purple-600 sm:text-sm sm:leading-6', id: 'username', required: true, autocomplete: 'username' %>
        </div>
      </div>

      <div>
        <div class="flex items-center justify-between">
          <label htmlFor="password" class="block text-sm font-medium leading-6 text-gray-900">
            Password
          </label>

        </div>
        <div class="mt-2">
          <%= f.password_field :password, class: 'block w-full outline-none rounded-md border-0 py-1.5 px-2 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-purple-600 sm:text-sm sm:leading-6', id: 'password', required: true, autocomplete: 'current-password' %>
        </div>
      </div>

      <div>
        <%= f.submit 'Login', class: 'flex w-full justify-center rounded-md bg-purple-600 px-3 py-1.5 text-sm font-semibold leading-6 cursor-pointer text-white shadow-sm hover:bg-purple-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-purple-600' %>
      </div>
    <% end %>
  </div>
</div>
